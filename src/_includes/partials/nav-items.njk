{% if navigation.items %}
    {% for item in navigation.items %}
        {% set externalAttribute = '' %}
        {% set currentAttribute = '' %}
        {% if item.external %}
            {% set externalAttribute = ' rel="external"' %}
        {% endif %}
        {% if page.url == item.url %}
            {% set currentAttribute = ' aria-current="page"' %}
        {% endif %}
        <a class="block lg:inline-block py-2 lg:py-0 rounded font-bold text-dirt-700 hover:text-brick-700" href="{{ site.baseURL }}{{ item.url }}" {{ externalAttribute | safe }} {{ currentAttribute | safe }} tabindex="1">
            {{ item.text }}
        </a>
    {% endfor %}
{% endif %}
